@{
    ViewData["Title"] = "Home Page";
}
<h2 class="jumbotron , text-center">
    Welcome to Music Manager
</h2>
<body class="container , text-center">
    <p id="homePage">
        You can look for Albums, Artists, or Genres below or in the top navigation bar.
    </p>
    <form action="Albums/Details" method="get">
        <button class="col-lg-4 , btn-lg , btn-info" id="AlbumButton">
            Albums Here
        </button>
    </form>
    <form action="Artists/Details" method="get">
        <button class="col-lg-4 , btn-lg , btn-info" id="ArtistButton">
            Artists Here
        </button>
    </form>
    <form action="Genres/Details" method="get">
        <button class="col-lg-4 , btn-lg , btn-info" id="GenreButton">
            Genres Here
        </button>
    </form>
        
</body>
