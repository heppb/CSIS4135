@model IEnumerable<MusicFall2016.Models.Artist>
@{
    ViewData["Title"] = "Artists";
}
<h2>Artist List</h2>

<form action="Create" method="get">
    <div>
        <button id="createButton3">
            Create Album
        </button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Artist</th>
            <th>Genre</th>
        </tr>
    </thead>
    @foreach (var artist in Model)
    {
        <tr>
            <td>@artist.Name</td>
            <td>@artist.Bio</td>
            <td>
                <a asp-action="Edit" asp-route-id="@artist.ArtistID">Edit</a> |
                <a asp-action="Details" asp-route-id="@artist.ArtistID">Details</a> |
            </td>
        </tr>
    }
    </table>

