@model MusicFall2016.Models.Artist
@{
    ViewData["Title"] = "Artist Update";
}
<h2>Artist Update</h2>
<form asp-action="Update" method="post">
    <input type="hidden" asp-for="ArtistID" value="@Model.ArtistID">
        <div>
            Name <p><input type="text" id="Name" asp-for="Name" value="@Model.Name" /></p>
            <span asp-validation-for="Name" class="text-danger"></span>
            Bio <p><input type="text" id="Bio" asp-for="Bio" value="@Model.Bio" /></p>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div>
            <button id="updateButton">
                Save Updates
            </button>
        </div>
    </form>
    <form action="Details" method="get">
        <div>
            <button id="backButton">
                Back to List
            </button>
        </div>
    </form>
