@model MusicFall2016.Models.Album
@{
    ViewData["Title"] = "Playlist Create";
}
<h2>Playlist Create</h2>
<form asp-controller="Account" asp-action="Playlists" method="post">
    <div>
        <div>Albums <p><select asp-for="AlbumID" asp-items="ViewBag.AlbumList" class="btn-lg"></select></p></div>
        <span asp-validation-for="AlbumID" class="text-danger"></span>
    </div>
    <div>
        <button id="createButton">
            Add to Playlist
        </button>
    </div>
</form>
<form action="Playlist" method="get">
    <div>
        <button id="backButton">
            Back to PlayList
        </button>
    </div>
</form>
