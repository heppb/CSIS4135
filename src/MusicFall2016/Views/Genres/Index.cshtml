@model IEnumerable<MusicFall2016.Models.Genre>
@{
    ViewData["Title"] = "Genres";
}
<h2>Genre List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Genre</th>
        </tr>
    </thead>
    @foreach (var genre in Model)
    {
        <tr>
            <td>@genre.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@genre.GenreID">Edit</a> |
                <a asp-action="Details" asp-route-id="@genre.GenreID">Details</a> |
            </td>
        </tr>
    }
    </table>

