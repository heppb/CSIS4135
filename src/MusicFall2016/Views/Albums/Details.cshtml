@model IEnumerable<MusicFall2016.Models.Album>
@{
    ViewData["Title"] = "Albums";
}
<h2>Album List</h2>

<form action="Create" method="get">
    <div>
        <button id="createButton2">
            Create Album
        </button>
    </div>
</form>
<form asp-controller="Albums" asp-action="Details" method="get">
    <div>
        <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </div>
</form>
<form asp-action="Details" method="get">
    <button>
        Full List
    </button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Like</th>
        </tr>
    </thead>
    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.Artist.Name</td>
            <td>@album.Genre.Name</td>
            <td>@album.Price</td>
            <td>Put Likes Here</td>
            <td>
                <a asp-action="Like" asp-route-id="@album.AlbumID">Like</a> |
                <a asp-action="Update" asp-route-id="@album.AlbumID">Edit</a> |
                <a asp-action="Read" asp-route-id="@album.AlbumID">Details</a> |
                <a asp-action="Delete" asp-route-id="@album.AlbumID">Delete</a>
            </td>
        </tr>
    }
    </table>

