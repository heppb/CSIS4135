@model IEnumerable<MusicFall2016.Models.Album>
@{
    ViewData["Title"] = "Albums";
}
<h2>Album List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Price</th>
        </tr>
    </thead>
    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td>@album.Artist.Name</td>
            <td>@album.Genre.Name</td>
            <td>@album.Price</td>
            <td>
                <a asp-action="Edit" asp-route-id="@album.AlbumID">Edit</a> |
                <a asp-action="Details" asp-route-id="@album.AlbumID">Details</a> |
                <a asp-action="Delete" asp-route-id="@album.AlbumID">Delete</a>
            </td>
        </tr>
    }
    </table>

