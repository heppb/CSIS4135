@model EventManager.Models.Events
@{
    ViewData["Title"] = "Edit Event Page";
}
@inject UserManager<ApplicationUser> UserManager

<h2>Information for @Model.EventName</h2>
<p>EventName: @Model.EventName</p>
<p>Artist Name: @Model.ArtistName</p>
<p>Genre: @Model.Genre</p>
<p>Event Date: @Model.EventDate</p>
<p>Event Location: @Model.Location</p>

<form asp-action="EventSub"asp-route-id="@Model.EventsID" method="get">
    <div>
        <button>
            Add Event To Calendar
        </button>
    </div>
</form>

<form action="Index" method="get">
    <div>
        <button>
            Back to Home
        </button>
    </div>
</form>
